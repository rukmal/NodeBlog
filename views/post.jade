extends ../views/layout

block content
	meta(property='og:image' content='#{post.photo}')
	meta(property='og:type' content='article')
	meta(property='og:description' content='#{post.description}')
	meta(name='twitter:creator:id' content='#{twitterID}')
	meta(name='twitter:title' content='#{post.title}')
	meta(name='twitter:image' content='#{post.photo}')
	link(rel='stylesheet' href='./../stylesheets/post.css')
	script(src='./../javascripts/post.js')
	script(src='./../javascripts/share.min.js')
	script(src='./../socket.io/socket.io.js')
	.jumbotron.text-center#title(style='background: url("#{post.photo}");background-size: 100% auto;background-attachment: fixed;background-color: rgb(237, 237, 237);color: #ffffff;box-shadow: 1px 10px 10px black;height: 22em;padding-top: 6.5em; background-repeat: no-repeat;')
		h1= post.title
	.jumbotron
		.container
			!= content
			br
		.jumbotron.text-center.containabout#move
			img.img-thumbnail#intropic(src='../#{imageLocation}')
			h2 About the author:
			p.text= description
			br
			.socialbuttons#move
			br
			br
			#disqus_thread