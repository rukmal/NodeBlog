extends ./../layout

block content
    div.jumbotron.text-center
        h1 Add a new post
        form(method='post' action='new_post_add')
            div.form-group
                input(type='text' placeholder='title' name='post_title')
            div.form-group
                input(type='text' placeholder='content (use markdown)' name='post_content')
            div.form-group
                input(type='text' placeholder='cover photo url' name='post_photo')
            div.form-group
                input(type='text' placeholder='slug' name='post_slug')
            div.form-group
                button.btn.btn-success#submit(type='submit') Submit
